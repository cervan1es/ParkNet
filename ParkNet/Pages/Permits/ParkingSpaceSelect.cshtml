@page
@model PARKNET.Pages.Permits.ParkingSpaceSelectModel

@{
    ViewData["Title"] = "ParkingSpaceSelect";
}

<h1>ParkingSpaceSelect</h1>

<h4>Permit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <p>
                Price: @Model.Permit.Price
            </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>
                Park:@Model.CurrentPark.Name;
            </p>
            

            <div class="form-group">
                <label asp-for="Permit.ParkingSpaceID" class="control-label">Available Parking Spaces</label>
                <select asp-for="Permit.ParkingSpaceID" asp-items="ViewBag.ParkingSpaces" class="form-control"></select>
                <span asp-validation-for="Permit.ParkingSpaceID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
